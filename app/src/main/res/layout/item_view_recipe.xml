<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_example"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_cardview"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="토마토 스파게티"
        android:layout_marginTop="6sp"
        android:layout_marginStart="3sp"/>

    <TextView
        android:id="@+id/text_recipe_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_recipe_name"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:text="맛있는 토마토 스파게티 만드는 법"
        android:layout_marginTop="3sp"
        android:layout_marginStart="3sp"/>

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_recipe_content"
        android:layout_marginStart="3sp"
        android:layout_marginTop="3sp"
        android:src="@drawable/img_icon" />

    <TextView
        android:id="@+id/text_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_recipe_content"
        android:textColor="@color/grey_writer"
        android:textSize="10sp"
        android:text="집밥백선생"
        android:layout_marginTop="3sp"
        android:layout_marginStart="3sp"/>

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        android:layout_marginStart="3sp"
        android:layout_marginTop="3sp"
        android:src="@drawable/icon_star" />
    <TextView
        android:id="@+id/text_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_star"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:text="4.8"
        android:textStyle="bold"
        android:layout_marginTop="3sp"
        android:layout_marginStart="3sp"/>
    <TextView
        android:id="@+id/text_review_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text_rate"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        android:textColor="@color/grey_writer"
        android:textSize="10sp"
        android:text="(10)"
        android:layout_marginTop="3sp"
        android:layout_marginStart="3sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

