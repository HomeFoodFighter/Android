<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3.5sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_cardview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@drawable/img_example"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:text="양상추"
        android:textColor="#96999C"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_cardview" />

    <TextView
        android:id="@+id/text_ingredient_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100g"
        android:textColor="#96999C"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient_name" />


</androidx.constraintlayout.widget.ConstraintLayout>