<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="158dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/style_myreview"
    android:paddingHorizontal="1dp"
    android:layout_marginBottom="30dp"
    android:layout_marginHorizontal="13dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/layout_cardview"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:src="@drawable/img_example"
            app:cardBackgroundColor="@color/white" />

        <TextView
            android:id="@+id/text_recipe_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="11dp"
            android:layout_marginTop="9dp"
            android:text="맛있는 토마토 스파게티 만드는 법"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="11dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:drawablePadding="4dp"
            android:text="집밥백선생"
            android:textColor="@color/grey_writer"
            android:textSize="10sp"
            app:drawableLeftCompat="@drawable/img_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/style_myreview_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/img_myreview_sample"
            android:drawablePadding="4dp"
            android:layout_marginHorizontal="11dp"
            android:layout_marginTop="7dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="홈푸파" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="굿이네요"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="11dp"
            android:layout_marginTop="9dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-09-22-4:20"
                android:textSize="14sp"
                android:layout_marginLeft="11dp"
                android:textColor="#B0B0B0" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/nothing"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


